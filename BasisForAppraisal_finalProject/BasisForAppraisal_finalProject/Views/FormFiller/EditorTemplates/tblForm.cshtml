@model BasisForAppraisal_finalProject.DBML.tblForm

@{
    ViewBag.Title = "tblForm";
}
@Html.HiddenFor(x => x.formId)
@Html.HiddenFor(x=> x.Sections.Count)
@Html.HiddenFor(x => x.FormName)

<div id="Panel" dir="rtl" style="width:100%; ">
    <div class="pull-right" style=" opacity:0.6; width:100%; height:10%; border-bottom-color:black; border-bottom-width:medium">
        <div class="table-responsive" dir="rtl" style="margin-top:5%;">
            <h2 style="background-color:#a6cae3; opacity:0.8; "><strong style="margin-right:37%;font-size:35px;">@Html.DisplayFor(x => x.FormName)</strong></h2>
        </div>
    </div>
    <h3>הקדמה:</h3>
    @*<div class="btn-primary pull-left" id="introductionCloseOpeb" onclick="ShowHideintroduction()" >הבנתי</div>*@
    <button id="introductionCloseOpeb" type="button" class="btn btn-primary btn-sm pull-left" style="width: 50px;" onclick="ShowHideintroduction()">הבנתי</div>

    <br />
    <div dir="rtl" style="border-bottom: groove; border-top: groove; font-size: large; background-color: white">
        <h5 class="text-right" id="introduction">@Html.DisplayFor(x => x.IntroductionForForm, new { @cols = 100, @rows = 10 })</h5>
    </div>
</div>
<script type="text/javascript">
    function ShowHideintroduction()
    {
        var div = $("#introduction");
        var btn = $("#introductionCloseOpeb");
        if (!div.is(':visible')) {
            //div.show();
            div.toggle(500);
            btn.val = "הבנתי סגור"
        }
        else {
            div.toggle(500);
            btn.value = "Close Curtain"
        }
    }
</script>


