@model BasisForAppraisal_finalProject.ViewModel.FormFillerViewModel
 @using PagedList;
@using PagedList.Mvc;
@{
    Layout = null;
}

<!DOCTYPE html>
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<script src="~/Scripts/bootstrap.min.js"></script>
<script src="~/Scripts/jquery-2.1.3.min.js"></script>
<script src="~/Scripts/jquery.simplePagination.min.js"></script>
<link href="~/Content/style.css" rel="stylesheet" />
<script src="~/Scripts/OurJavaScripts/FormFillJS.js"></script>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>FormFill</title>
    <script type="text/javascript">
        $(function () {
            var perPage = 3;
            var opened = 1;
            var onClass = 'on';
            var paginationSelector = '.pages';
            $('#exampsle').simplePagination(perPage, opened, onClass, paginationSelector);
        });

       
    </script>
  
    <script type="text/javascript">
        $(function () {
            setTimeout(function () { $("#UnAnswerQuestions").fadeOut(1500); }, 2500)
            $('#btnclick').click(function () {
                $('#testdiv').show();
                setTimeout(function () { $("#testdiv").fadeOut(1500); }, 2500)
            })
        })
    </script>

</head>
<body>
   
    <!-- if not answers all the question this panel will show up -->
    @if (TempData["UnAnswerQuestions"] != null)
{

    <div class="alert alert-danger" id="UnAnswerQuestions" style="text-align: right; ; margin-top:13%; position:fixed; align-self:center">
        <strong dir="rtl">לא ענית על מספר שאלות</strong>
    </div>
}

    @using(Html.BeginForm())
    { 
        @Html.HiddenFor(x => x.CompanyId)
        @Html.HiddenFor(x => x.FillBy)
        @Html.HiddenFor(x => x.FillOn)
         @Html.HiddenFor(x => x.FormIdConnector)
        @Html.HiddenFor(x => x.AnswerQuestions)
    <div id="Panel" style="width: 100%; margin-top: 0%; background-color:white ">
        <div class="panel panel-heading">
            <div class="panel-heading">
                <div class="alert-info">
                    <strong>@Model.FillOn על</strong>
                    @Html.EditorFor(x => x.From)
                    </div>
                    <div id="exampsle">
                        @Html.EditorFor(x => x.Questions)
                        <button type="submit" class="btn btn-primary btn-lg" style="width:150px; height:10%">סיים ושלח</button>
                    </div>
                <ul class="pager">
                    <li class="pages"></li>

                </ul>

                </div>
           </div>
        </div>
    
    }
</body>
</html>
