@model  BasisForAppraisal_finalProject.ViewModel.CompanyViewModel
@{
    ViewBag.Title = "ManageCompany";
}
<link href="~/Content/bootstrap.css" rel="stylesheet" />
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<script src="~/Scripts/bootstrap.js"></script>
<script src="~/Scripts/jquery-1.10.2.js"></script>
<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<link href="~/Scripts/DataTable/jquery.dataTables.css" rel="stylesheet" />

<div dir="rtl" style="border:double; width:220px; margin-left:40%; margin-top:10%">
    @using (Html.BeginForm("Index", "MainCompanies", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {

        Session["companyId"] = @Model.Company.companyId;
        
        <label for="file" style="margin-right:36%">הוסף עובדים</label>
        <br />
        <input type="file" name="file" id="file" />
        <br />
        <input type="submit" value="העלה נתונים" style="margin-right:36%;" />
        
           
    }
</div>

<div style="width:100%; background-color: cornflowerblue; text-align:center">
    <h2>@Model.Company.comapnyName</h2>
</div>


<div dir="rtl">
    @Html.EditorFor(x => x.Company)
</div>


<fieldset>
    <legend>
        Send Email
    </legend>
    @using (Html.BeginForm("Index", "SendMailer", FormMethod.Post))
    {
        
        <input type="submit" value="Send mail" />
    }
</fieldset>