@model BasisForAppraisal_finalProject.DBML.tbl_Class
@{
    Layout = null;
}
<script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
<link href="~/Content/jquery-ui-1.10.4.custom.min.css" rel="stylesheet" />
<script src="~/Scripts/jquery-ui-1.10.4.custom.min.js"></script>
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<script src="~/Scripts/jquery-2.1.3.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

<style type="text/css">
    #panelCls {
        display: none;
    }
    </style>




<div>
    @*<div id="AddCls" class="btn btn-primary btn-lg glyphicon glyphicon-folder-open"></div>*@
</div>

@using (Html.BeginForm("AddClass", "MainCompanies", FormMethod.Post))
{
    @Html.HiddenFor(x => x.companyId)
    <div id="panelCls">
        <table class="table-condensed" style="background-color:whitesmoke" align="center" dir="rtl">

            <tr>
                <th>
                    @Html.DisplayNameFor(x => x.unitName)
                </th>
                <th>
                    @Html.TextBoxFor(x => x.unitName)
                    <br />
                    @Html.ValidationMessageFor(x => x.unitName)
                </th>
            </tr>

            <tr>
                <th>
                    @Html.DisplayNameFor(x => x.className)
                </th>
                <th>
                    @Html.EditorFor(x => x.className)
                    <br />
                    @Html.ValidationMessageFor(x => x.className)
                </th>
            </tr>
        </table>
        <button type="submit" class="btn btn-primary btn-lg">הוסף</button>
    </div>
}

<script type="text/javascript">
            $(document).ready(function () {
                $("#AddCls").click(function () {
                    $("#panelCls").toggle(500)
                });
            });

</script>
