    <div class="table-responsive" dir="rtl" style="margin-top:5%;">
        <h2 style="background-color:beige; opacity:0.8;">רשימת טפסים שעלייך למלא:</h2>
    </div>

    <div dir="rtl">
        @for (int i = 0; i < Model.FillOnThem.Count; i++)
        {
            @Html.HiddenFor(x => x.FillOnThem[i].companyId);
            @Html.HiddenFor(x => x.FillOnThem[i].employeeFillId);
            @Html.HiddenFor(x => x.FillOnThem[i].employeeOnId);
            @Html.HiddenFor(x => x.FillOnThem[i].formId);
            <br />

            using (Html.BeginForm("GetFromForFill", "Guest", new
            {
                companyId = Model.FillOnThem[i].companyId,
                employeeFillId = Model.FillOnThem[i].employeeFillId,
                employeeOnId = Model.FillOnThem[i].employeeOnId,
                formId = Model.FillOnThem[i].formId
            },
            FormMethod.Post))
            {
                if (Model.FillOnThem[i].done.HasValue && Model.FillOnThem[i].done.Value)
                {
                    <button class="alert alert-success" role="alert" style="width:30%; text-align:right">
                        <span class="glyphicon glyphicon-thumbs-up" aria-hidden="true" style="margin-left:4%;"></span>
                        <strong style="align-content:flex-end; margin-left:10%"> שם: @Model.FillOnThem[i].tbl_Employee1.firstName @Model.FillOnThem[i].tbl_Employee1.lastName</strong>
                        <strong style="align-content:flex-end">       טופס: @Model.FillOnThem[i].tblForm.FormName</strong>
                    </button>
                }
                else
                {
                    <button class="alert alert-warning" role="alert" style="width: 30%; text-align: right">
                        <span class="glyphicon glyphicon-time" aria-hidden="true" style="margin-left:4%;"></span>

                        <strong style="align-content:flex-end; margin-left:10%"> שם: @Model.FillOnThem[i].tbl_Employee1.firstName @Model.FillOnThem[i].tbl_Employee1.lastName</strong>
                        <strong style="align-content:flex-end">       טופס: @Model.FillOnThem[i].tblForm.FormName</strong>
                    </button>
                }

            }



            <span>@*@Html.CheckBoxFor(x => x.FillOnThem[i].done.HasValue, new { @disabled = "disabled" })*@</span>


        }
    </div>

