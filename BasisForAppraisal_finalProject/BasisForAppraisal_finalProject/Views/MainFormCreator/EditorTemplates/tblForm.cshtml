@model BasisForAppraisal_finalProject.DBML.tblForm

@{
    ViewBag.Title = "tblForm";
}
@Html.HiddenFor(x => x.formId)
@Html.HiddenFor(x=> x.Sections.Count)

<div id="Panel" dir="rtl" style="width:90%; ">

    <h1 class="text-center" dir="rtl">@Html.EditorFor(x => x.FormName)</h1>
    <h3>הקדמה שגריר:</h3>
    <h5 class="text-right" dir="rtl">@Html.TextAreaFor(x => x.introduction, new { @cols = 100, @rows = 10 })</h5>

    <h3>הקדמה עמיתים:</h3>
    <h5 class="text-right" dir="rtl">@Html.TextAreaFor(x => x.IntroductionColleges, new { @cols = 100, @rows = 10 })</h5>


    <h3>הקדמה מוביל:</h3>
    <h5 class="text-right" dir="rtl">@Html.TextAreaFor(x => x.IntroductionSupervisor, new { @cols = 100, @rows = 10 })</h5>


    <h3>הקדמה מלווה:</h3>
    <h5 class="text-right" dir="rtl">@Html.TextAreaFor(x => x.IntroductionAccompanied, new { @cols = 100, @rows = 10 })</h5>

</div>


