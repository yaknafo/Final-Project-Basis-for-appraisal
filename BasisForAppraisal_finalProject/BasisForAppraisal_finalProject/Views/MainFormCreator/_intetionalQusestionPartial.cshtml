@model BasisForAppraisal_finalProject.DBML.tbl_IntentionalQuestion
@{
    ViewBag.Title = "tbl_IntentionalQuestion";
}
<link href="~/Content/bootstrap.css" rel="stylesheet" />
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />

<table class="table" dir="rtl">
    <div dir="rtl">
        @Html.HiddenFor(x => x.FormId)
        @Html.HiddenFor(x => x.QuestionId)
        
       <h4 style="font-weight:bold">@Model.Title</h4>
    </div>


   


    <tr dir="rtl">

        <br />
        <br />
        @for (int i = 0; i < Model.Answers.Count(); i++)
        {
            <th dir="rtl">
                @Html.EditorFor(x => x.Answers[i])
                @Html.RadioButtonFor(a => a.selectedAnswer, Model.Answers[i].AnswerId, new { style = "height: 25px;  width:25px; margin-left: 20%; margin-top: 10px;" })
            </th>



        }

    </tr>
</table>


