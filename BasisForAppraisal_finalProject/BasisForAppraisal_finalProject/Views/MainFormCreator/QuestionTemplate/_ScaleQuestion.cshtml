@model BasisForAppraisal_finalProject.DBML.tbl_IntentionalQuestion
<div dir="rtl" style="border-bottom: solid;">
    <br />
    @if (@Model.NumberOfAnswers == 2)
    {

        @Html.EditorFor(x => x.NumberOfAnswers)
        <br />
        <br />
        @Html.TextBoxFor(x => x.Answers[0].Text, new { placeholder = "תג לערך מקסימלי" })
        <br />
        <br />
        @Html.TextBoxFor(x => x.Answers[1].Text, new { placeholder = "תג לערך מינימלי" })

    }
    else
    {
        <table>
            <tr>

                @if (Model.Answers.Count > 0)
                {
                    <th>
                        @Html.TextBoxFor(x => x.Answers[0].Text)

                    </th>
                    for (int i = 0; i < @Model.Answers.Count; i++)
                    {
                        <td style="height: 20px;  width:100px; margin-top: 10px; align-self:center">
                            @Html.HiddenFor(x => x.Answers[i].AnswerId)
                            @Html.HiddenFor(x => x.Answers[i].AnswerOption)
                            @Html.HiddenFor(x => x.NumberOfAnswers)
                            <div style="margin-right: 50%;">
                                @Html.RadioButtonFor(a => a.selectedAnswer, Model.Answers[i].AnswerId)
                                <br />
                                @(i + 1)
                            </div>
                        </td>
                    }
                    <th>
                        @Html.TextBoxFor(x => x.Answers[Model.Answers.Count - 1].Text)
                    </th>
                }
            </tr>
        </table>
    }
    <div style="margin-bottom:2%;"></div>
</div>