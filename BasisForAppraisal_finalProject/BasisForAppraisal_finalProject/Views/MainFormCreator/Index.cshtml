@model BasisForAppraisal_finalProject.DBML.tblForm
@{
    ViewBag.Title = "Index";
}
<link href="~/Content/bootstrap.css" rel="stylesheet" />
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />


    <div style="text-align: right; border: 1px solid silver; margin-left:78%; margin-top:15%; position:fixed">
     <button type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#myModal" style="font-size: 36px; width: 200px;  background-color: black" >+</button>
    </div>

        @using (Html.BeginForm("Index", "MainFormCreator", FormMethod.Post))
{
         <div style="margin-left: 78%; margin-top: 5%; position: fixed; ">
            <input type="submit" class="btn btn-primary btn-lg" value="שמור טופס" style="font-size: 36px; width: 200px; background-color: black" />
        </div>

        <div class="col-lg-12">
            @Html.EditorForModel()
        </div>

}
        
<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">Modal title</h4>
</div>
@using (Html.BeginForm("addNewQuestion", "MainFormCreator", FormMethod.Post))
{  <div class="modal-body">

       @Html.EditorFor(x => x.NewQuestion);
            </div>
 <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
          <button type="submit" class="btn btn-primary">שמור שאלה</button>
      </div>
        }
       

 
    </div>
  </div>
</div>

      

 

