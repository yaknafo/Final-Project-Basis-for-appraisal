@model BasisForAppraisal_finalProject.Models.RegisterViewModel
 @using BasisForAppraisal_finalProject.Common.Constans;
@{
    ViewBag.Title = "Register";
}
<style type="text/css">
    #panelAddUser {
        display: none;
    }
</style>

<div id="panelAddUser" dir="rtl">
    @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    { @Html.AntiForgeryToken()
    <div dir="rtl">
        <h4>הוספת הרשאה</h4>
        <hr />
        @Html.ValidationSummary()
        <div class="form-group">
            @Html.LabelFor(m => m.UserName)
            <div dir="rtl" class="col-lg-11">
                @Html.TextBoxFor(m => m.UserName, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Password)
            <div class="col-lg-11">
                @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.ConfirmPassword)
            <div class="col-lg-11">
                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Role)
            <div class="col-lg-11">
                @Html.TextBoxFor(m => m.Role, new { @class = "form-control" });
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" class="btn btn-default" value="Register" />
            </div>
        </div>
    </div>
    }
</div>

<script type="text/javascript">
    $(document).ready(function () {
        $("#AddCls").click(function () {
            $("#panelAddUser").toggle(500)
        });
    });

</script>



