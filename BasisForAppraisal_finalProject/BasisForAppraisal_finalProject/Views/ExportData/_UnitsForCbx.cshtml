@model string
@Html.DropDownList("units", ViewData["ListDataUnit"] as List<SelectListItem>, new { @class = "btn-lg dropdown-toggle", id = "units"})
@*@Html.Hidden("co", new { @class = Model.ToString(), id = "co" })*@
<div id="co" title=@Model.ToString()></div>
<script type="text/javascript">
    $("#units").change(function () {
        var id = $(this).val();
        if (id != null) {
            $.ajax(
                {
                    url: '@Url.Action("GetclassCascadeUnit")',
                    type: "get",
                    data: { id: id, unit: $('#co').attr("title") }

                }).done(function (data) {
                    // debugger



                    $("#class").html(data);


                });

        }
    });


</script>  