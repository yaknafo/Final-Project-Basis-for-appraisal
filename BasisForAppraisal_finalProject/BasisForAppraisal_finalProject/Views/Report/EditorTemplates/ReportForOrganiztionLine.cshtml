@model BasisForAppraisal_finalProject.DBML.ReportForOrganiztionLine
@{
    ViewBag.Title = "ReportPerOrganiztion";
}

   @if(Model.MidScore != 0 || Model.LowScore != 0|| Model.HighScore !=0)
   {
    <script type="text/javascript">
    var methodName = '@Model.tbl_IntentionalQuestion.Title';
    google.charts.setOnLoadCallback(methodName);

    function methodName() {
        var data = google.visualization.arrayToDataTable([
          ['Task', 'Hours per Day'],
          ['גבוהה', @Model.HighScore],
          ['בינוני', @Model.MidScore],
          ['נמוך', @Model.LowScore],
        ]);

        var options = {
            title: '@Model.tbl_IntentionalQuestion.Title',
            pieHole: 0.4,
        };


        @*var chart = new google.visualization.PieChart(document.getElementById('@Model.QuestionId'));
        chart.draw(data, options);*@
    }
    </script>
    <div id='@Model.QuestionId' style="width: 900px; height: 500px;"></div>
   }
